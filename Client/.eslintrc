{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "rules": {
        "no-mixed-requires": [0, false],
        "no-undefined": 2,
        "no-undef": 2,
        "quotes": [2, "single"],
        "strict": [1, "never"],
        "semi": [2, "always"],
        "curly": 1,
        "no-bitwise": 1,
        "max-len": 0,
        "vars-on-top": 0,
        "guard-for-in": 1,
    },

    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },

    "globals": {
        "d3": true,
        "require": true,
        "import": true,
        "export": true,
        "module": true,
        "$": "true"
    }
}